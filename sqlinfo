$Q1_ORACLE = "SELECT last_name, job_title, e.department_id, department_name\n".
"FROM employees e, departments d, jobs j, locations l\n".
"WHERE e.department_id = d.department_id\n".
"AND j.job_id = e.job_id\n".
"AND l.location_id = d.location_id\n".
"AND UPPER(city)='SOUTHLAKE'\n";

$Q3_ORACLE = "SELECT e.last_name AS \"Employee\", e.employee_id AS \"Emp#\",\n".

$Q3_SQL = "SELECT e.last_name AS \"Employee\", e.employee_id AS \"Emp#\",\n".
"\tm.last_name AS \"Manager\", e.manager_id AS \"Mgr#\"\n".
"FROM employees e INNER JOIN employees m\n".
"ON e.manager_id = m.employee_id\n".
